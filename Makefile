NAME = fractol
SRCS = $(wildcard *.c)
OBJS = $(SRCS:.c=.o)
CC = gcc
CFLAGS = -Wall -Werror -Wextra -g -O3 -march=native -ffast-math
MLX42_DIR = MLX42
MLX42_BUILD = $(MLX42_DIR)/build
MLX42_LIB = $(MLX42_BUILD)/libmlx42.a
MLX42_INCLUDE = -I$(MLX42_DIR)/include
MLX_LIBS = -lglfw -ldl -lGL -lm -lX11 -lXrandr -lXi

# Colores
GREEN = \033[0;32m
YELLOW = \033[1;33m
BLUE = \033[1;34m
MAGENTA = \033[1;35m
RESET = \033[0m

all: ascii_art $(NAME)

ascii_art:
