	@echo "$(RESET)"

$(MLX42_LIB):
	@if [ ! -f $(MLX42_LIB) ]; then \
		echo "$(YELLOW)[INFO]$(RESET) Building MLX42..."; \
		cd $(MLX42_DIR) && cmake -B build . && make -C build -j4; \
	fi

$(NAME): $(MLX42_LIB) $(OBJS)
	@echo "$(GREEN)[LINK]$(RESET) Linking $(NAME)..."
	@$(CC) $(OBJS) $(MLX42_LIB) $(MLX_LIBS) -o $(NAME)
	@echo "$(GREEN)[DONE]$(RESET) Build completed: $(NAME)"

%.o: %.c
	@echo "$(BLUE)[COMPILE]$(RESET) $< -> $@"
	@$(CC) $(CFLAGS) $(MLX42_INCLUDE) -c $< -o $@

clean:
	@echo "$(YELLOW)[CLEAN]$(RESET) Removing object files..."
	@rm -f $(OBJS)

fclean: clean
	@echo "$(YELLOW)[FCLEAN]$(RESET) Removing executable..."
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re ascii_art